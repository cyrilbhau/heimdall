generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ReasonCategory {
  EVENT
  VISIT
  OTHER
}

model VisitReason {
  id         String          @id @default(cuid())
  label      String          @unique
  slug       String          @unique
  active     Boolean         @default(true)
  sortOrder  Int             @default(0)
  source     ReasonSource    @default(MANUAL)
  category   ReasonCategory?
  featured   Boolean         @default(false)
  featuredAt DateTime?

  visits    Visit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visit {
  id            String        @id @default(cuid())
  fullName      String
  email         String
  photoUrl      String?       // For production, store in object storage and save key/URL here
  visitReasonId String?
  visitReason   VisitReason?  @relation(fields: [visitReasonId], references: [id])
  customReason  String?       // Freeform reason typed at the kiosk
  notes         String?
  source        VisitSource   @default(KIOSK)

  createdAt     DateTime @default(now()) // visit timestamp
  updatedAt     DateTime @updatedAt

  crmSyncEvents CrmSyncEvent[]

  @@index([visitReasonId])
  @@index([createdAt])
  @@index([email])
  @@index([fullName])
}

model CrmSyncEvent {
  id        String   @id @default(cuid())
  visitId   String
  visit     Visit    @relation(fields: [visitId], references: [id], onDelete: Cascade)
  provider  String
  status    String   // e.g. SUCCESS, FAILED
  error     String?
  sentAt    DateTime?

  createdAt DateTime @default(now())

  @@index([visitId])
}

model LumaEvent {
  id         String   @id @default(cuid())
  externalId String   @unique
  title      String
  startTime  DateTime
  fetchedAt  DateTime @default(now())

  createdAt  DateTime @default(now())
}

enum VisitSource {
  KIOSK
  MANUAL
  API
}

enum ReasonSource {
  MANUAL
  LUMA
}
